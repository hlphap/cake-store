<div class='container-fluid'>
    <img class='img-header' src='/image/menu/cake.jpg' />
</div>

<div class='container'>
    <div class='shopoption'>
        <div class='row'>
            <div class='col-lg-7 col-md-7'>
                <div class='shop_option_search'>
                    <form action='#'>
                        <span class='type'>Loại bánh:</span>
                        <select>
                            <option value=''>Lựa chọn</option>
                            <option value=''>Red Velvet</option>
                            <option value=''>Cup Cake</option>
                            <option value=''>Biscuit</option>
                        </select>
                        <span>|</span>
                        <input type='text' placeholder='Search' />
                    </form>
                </div>
            </div>
            <div class='col-lg-5 col-md-5'>
                <div class='shop_option_right'>
                    <select>
                        <option value=''>Sắp xếp</option>
                        <option value=''>A to Z</option>
                        <option value=''>Giá từ thấp đến cao</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class='row'>
        {{#each data.cakes}}
        <a type='button' href='/menu/{{this._id}}' class='col-lg-3 col-md-6 col-sm-6 item'>
            <div class='discount'> -{{this.discount}}%</div>
            <div class='product'>
                <table class=''>
                    <tr>
                        <td>
                            <img class='cake' src='{{this.image}}' />
                        </td>
                    </tr>
                    <tr>
                        <td class='product_text'>
                            <div class='vote'>
                                {{this.typeCake.name}}
                                <span class='star'><img class='img-star'
                                        src='https://img.icons8.com/color/96/000000/like--v3.png' />{{this.tym}}
                                </span>
                            </div>
                            <div class='product_name'>{{this.name}}</div>
                            <span class='price'><del>{{this.price}} đ </del>{{this.priceDiscount}} đ </span>
                            <img class='cart' src='/image/menu/Cart.png' />
                        </td>
                    </tr>
                </table>
            </div>
        </a>
        {{/each}}
    </div>
