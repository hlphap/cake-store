<section id='home'>
    <!-- top-banner -->
    <div class='container-fluid px-0 top-banner'>
        <div class='content-wrap'>
            <div class='row'>
                <div class='col-lg-5 col-sm-6'>
                    <h1>Cửa hàng bán bánh ngọt ngon nhất Sài Gòn</h1>
                    <div class='mt-4'>
                        <a href='/menu' class='main-btn'>Đặt hàng</a>
                        <a href='/contact' class='white-btn'>Liên hệ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cake and type cake -->
    <div class='home-product'>
        <div class='content-wrap'>
            <!-- type cake -->
            <div class='home-type-cake'>
                <div class='row'>
                    <img class='logo-title'
                        src='https://img.icons8.com/external-photo3ideastudio-flat-photo3ideastudio/64/000000/external-bakery-august-bakery-photo3ideastudio-flat-photo3ideastudio.png' />
                    <h4>Sản phẩm được yêu thích nhất</h4>
                </div>
                <div class='row'>
                    {{#each data.typeCakes}}
                    <form action='/menu/type-cakes/{{this._id}}'>
                        <button type='submit' class='col-sm-3 custom-button'>
                            <div style='background-image: url({{this.image}});' class='type-cake-item'>
                            </div>
                            <div class='type-cake-text-item'>
                                <h5>{{this.name}}</h5>
                            </div>
                        </button>
                    </form>
                    {{/each}}
                </div>
            </div>
            <!-- cake -->
            <div class='home-cake'>
                <div class='row'>
                    {{#each data.cakes}}
                    <a class='col-sm-3 custom-button' href='/menu/{{this._id}}'>
                        <div class='cake-item'>
                            <div class='content-image' style='background-image: url({{this.image}});'>
                                <button value='{{this._id}}' type='button' id='btnAddCakeToCart'
                                    class='cake-name btnAddCakeToCart'>
                                    <h5>Thêm vào giỏ</h5>
                                </button>
                            </div>
                            <div class='content-title'>
                                <h5>{{this.name}}</h5>
                                <h5 class='price'>{{this.priceDiscount}} đ</h5>
                            </div>
                        </div>
                    </a>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
