<!-- Modal -->
<div class="modal fade" id="modal-register" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div id='signup-form' class="modal-content ">
            <div class='container' id='popupForm'>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <div class='form'>
                    <h2>ĐĂNG KÍ</h2>
                    <form id='formRegister'>
                        <h3>Thông tin tài khoản</h3>
                        <div class='input-form'>
                            <input type='text' name='email' placeholder='Tên đăng nhập/Email' required />
                        </div>
                        <div class='input-form'>
                            <input type='password' name='password' placeholder='Mật khẩu' required />
                        </div>
                        <div class='input-form'>
                            <input type='password' name='rePassword' placeholder=' Nhập lại Mật khẩu' required />
                        </div>
                        <h3>Thông tin cá nhân</h3>
                        <div class='input-form'>
                            <input type='text' placeholder='Tên đầy đủ' name='fullName' />
                        </div>
                        <div class='input-form'>
                            <input type='date' placeholder='Ngày sinh' name='birthday' />
                        </div>
                        <div class='input-form'>
                            <select id='provinces' name='province' required>
                                <option value=''>Tỉnh/Thành </option>
                            </select>
                            <select id='districts' name='district' required>
                                <option value=''>Quận/Huyện</option>
                            </select>
                            <select id='wards' name='ward' required>
                                <option value=''>Phường/Xã</option>
                            </select>
                            <input class='billing_address_1' name='' type='hidden' value='' />
                            <input class='billing_address_2' name='' type='hidden' value='' />
                        </div>
                        <div class='input-form'>
                            <input id='btnRegister' type='submit' value='Đăng kí' />
                        </div>
                    </form>
                    <div class='signout'>
                        <p>Bạn đã là Thành Viên!!! <a style="cursor: pointer;" data-toggle="modal"
                                data-target="#modal-login" data-dismiss="modal" aria-label="Close">Đăng nhập</a> ngay
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>