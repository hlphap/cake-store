<style>
    .manaReceipt-headerTitle {
        font-weight: bold;
        font-size: large;
        margin-top: 1.2rem;
        margin-bottom: 7px;
    }

    .manaReceipt-allDropdowStyle {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        margin-left: 3px;
        justify-content: space-between;
    }

    .manaReceipt-dropComponentStyle {
        flex-direction: column;
        margin: 0 3.5%;
    }

    .manaReceipt-dropDownStyle {
        border-radius: 6px;
        border-color: black;
        border-width: 1px;
        box-sizing: content-box;
        padding: 5px 4px;
        font-weight: normal;
        border-radius: 6px;
    }

    .manaReceipt-dropDownStyle:hover {
        border-color: #9F0311;
    }

    .manaReceipt-buttonSearch {
        margin-top: 70%;
        width: 85px;
        border-radius: 6px;
        background-color: #9F0311;
        color: white;
    }

    .manaReceipt-buttonSearch:hover {
        box-shadow: 1px 1px 4px 1px grey;
        color: black;
    }

    .manaReceipt-styleList {
        border-style: solid;
        border-width: 1px 1px;
        width: 92%;
        height: 65%;
        border-radius: 6px;
        margin-top: 24px;
        margin-left: 48px;
        margin-right: 48px;
        position: relative;
    }

    .manaReceipt-addButton {
        position: absolute;
        justify-content: flex-end;
        right: 12px;
        bottom: 12px;
        border-radius: 6px;
        align-items: flex-end;
        justify-content: flex-end;
        background-color: #9F0311;
        color: white;
    }

    .manaReceipt-addButton:hover {
        box-shadow: 1px 1px 4px 1px grey;
        color: black;
    }

    .manaReceipt-rowDataStyle {
        flex-direction: row;
        display: flex;

    }

    .manaReceipt-rowDataStyle:hover {
        border-width: 2px;
        border-color: red;
        border-style: solid;
    }

    .manaReceipt-tableStyle {
        width: 100%;
        padding-left: 12px;
    }

    .manaReceipt-optionDropDown {
        font-weight: 500;
    }

    .manaReceipt-optionDropDown :hover {
        background-color: #9F0311;
        color: white;
    }

    .manaReceipt-styleList tbody tr {}

    .manaReceipt-styleList tbody td {
        width: 21%;
    }

    .manaReceipt-styleList thead th {
        width: 21%;
    }

    .manaReceipt-styleList thead {
        display: block;
    }

    .manaReceipt-styleList tbody {
        display: block;
        height: 26rem;
        overflow-x: hidden;
        overflow-y: scroll;
        font-weight: 500;
    }

    .manaReceipt-dropbtn {}

    .manaReceipt-dropdown {
        position: relative;
        display: inline-block;
    }

    .manaReceipt-dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        background-color: #f9f9f9;
        min-width: 120;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

    .manaReceipt-dropdown-content a {
        color: #9F0311;
        padding: 3px 12px;
        text-decoration: none;
        display: block;
        font-weight: bold;

    }

    .manaReceipt-dropdown-content a:hover {
        background-color: #9F0311;
        color: white;
        border-radius: 6px;
    }

    .manaReceipt-dropdown:hover .manaReceipt-dropdown-content {
        display: block;
        color: white;
        border-radius: 6px;
    }

    .manaReceipt-dropdown:hover .manaReceipt-dropdowndropbtn {
        background-color: #9F0311;
        width: 18px;
        height: 18px;
        color: white;
    }

    .manaReceipt-firstRowTable {
        position: sticky;
        top: 0;
        background-color: white;
    }
</style>
<div>
    <div class="manaReceipt-allDropdowStyle">
        <div class="manaReceipt-dropcomponentStyle" >
            <p class="manaReceipt-headerTitle">Tên Khách hàng</p>
            <select name="nameCake" id="nameCake" class="manaReceipt-dropDownStyle">
                <option value="" disabled selected>Select your option</option>
                <option class="manaReceipt-optionDropDown" value="A-Z">A-Z</option>
                <option class="manaReceipt-optionDropDown" value="Z-A">Z-A</option>
            </select>
        </div>
        <div class="manaReceipt-dropcomponentStyle" >
            <p class="manaReceipt-headerTitle">Tổng tiền</p>
            <select name="price" id="price" class="manaReceipt-dropDownStyle">
                <option value="" disabled selected>Select your option</option>
                <option class="manaReceipt-optionDropDown" value="tangdan">Tăng dần</option>
                <option class="manaReceipt-optionDropDown" value="giamdan">Giảm dần</option>
            </select>
        </div>
        <div class="manaReceipt-dropcomponentStyle" >
            <p class="manaReceipt-headerTitle">Ngày thêm vào</p>
            <select name="dateAdd" id="dateAdd" class="manaReceipt-dropDownStyle">
                <option value="" disabled selected>Select your option</option>
                <option class="manaReceipt-optionDropDown" value="moinhat">Mới nhất</option>
                <option class="manaReceipt-optionDropDown" value="cunhat">Cũ nhất</option>
            </select>
        </div>
        <div class="manaReceipt-dropcomponentStyle" style="margin-right: 75px;">
            <button class="manaReceipt-buttonSearch">
                Tìm kiếm
            </button>
        </div>
    </div>
    <div class="manaReceipt-styleList">
        <table class="table table-hover manaReceipt-tableStyle">
            <tbody>
                <div>
                    <tr>
                        <th class="manaReceipt-firstRowTable" scope="col">STT</th>
                        <th class="manaReceipt-firstRowTable" scope="col">Mã Hóa đơn</th>
                        <th class="manaReceipt-firstRowTable" scope="col">Khách hàng</th>
                        <th class="manaReceipt-firstRowTable" scope="col">Tổng tiền</th>
                        <th class="manaReceipt-firstRowTable" scope="col">Ngày thêm vào</th>
                        <th class="manaReceipt-firstRowTable" scope="col"></th>
                    </tr>
                </div>
                {{#each data}}
                <tr>
                    <td>1</td>
                    <td style="color: #9F0311;">{{this.name}}</td>
                    <td style="color: #9F0311;">{{this.price}}</td>
                    <td>{{this.typeCake.name}}</td>
                    <td>Ngày thêm vào</td>
                    <td class="manaReceipt-dropdown">
                        <img class="manaReceipt-dropbtn" src='/image/3dot.png' alt='' width="18" height="18" />
                        <div class="manaReceipt-dropdown-content">
                            <a href="#">Chỉnh sửa</a>
                            <a href="#">Xóa</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>