<style>
    .manaTypeCake-headerTitle {
        font-weight: bold;
        font-size: large;
        margin-top: 1.2rem;
        margin-bottom: 7px;
    }

    .manaTypeCake-allDropdowStyle {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        margin-left: 4px;
        justify-content: space-between;
    }

    .manaTypeCake-dropComponentStyle {
        flex-direction: column;
        margin: 0 3.5%;
    }

    .manaTypeCake-dropDownStyle {
        border-radius: 6px;
        border-color: black;
        border-width: 1px;
        box-sizing: content-box;
        padding: 5px 4px;
        font-weight: normal;
        border-radius: 6px;
    }

    .manaTypeCake-dropDownStyle:hover {
        border-color: #9F0311;
    }

    .manaTypeCake-buttonSearch {
        margin-top: 70%;
        width: 85px;
        border-radius: 6px;
        background-color: #9F0311;
        color: white;

    }

    .manaTypeCake-buttonSearch:hover {
        box-shadow: 1px 1px 4px 1px grey;
        color: black;
    }

    .manaTypeCake-styleList {
        border-style: solid;
        border-width: 1px 1px;
        width: 92%;
        height: 65%;
        border-radius: 6px;
        margin-top: 24px;
        margin-left: 48px;
        margin-right: 48px;
        position: relative;
    }

    .manaTypeCake-addButton {
        position: absolute;
        justify-content: flex-end;
        right: 12px;
        bottom: 12px;
        border-radius: 6px;
        align-items: flex-end;
        justify-content: flex-end;
        background-color: #9F0311;
        color: white;
    }

    .manaTypeCake-addButton:hover {
        box-shadow: 1px 1px 4px 1px grey;
        color: black;
    }

    .manaTypeCake-rowDataStyle {
        flex-direction: row;
        display: flex;

    }

    .manaTypeCake-rowDataStyle:hover {
        border-width: 2px;
        border-color: red;
        border-style: solid;
    }

    .manaTypeCake-tableStyle {

        width: 92%;
        left: 12px;

    }

    .manaTypeCake-optionDropDown {
        font-weight: 500;
    }

    .manaTypeCake-optionDropDown :hover {
        background-color: #9F0311;
        color: white;
    }

    .manaTypeCake-styleList tbody tr {}

    .manaTypeCake-styleList tbody td {
        width: 25%;
    }

    .manaTypeCake-styleList thead th {
        width: 21%;
    }

    .manaTypeCake-styleList thead {
        display: block;
    }

    .manaTypeCake-styleList tbody {
        display: block;
        height: 26rem;
        overflow-x: hidden;
        overflow-y: scroll;
        font-weight: 500;
    }

    .manaTypeCake-dropbtn {}

    .manaTypeCake-dropdown {
        position: relative;
        display: inline-block;
    }

    .manaTypeCake-dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        background-color: #f9f9f9;
        min-width: 120;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

    .manaTypeCake-dropdown-content a {
        color: #9F0311;
        padding: 3px 12px;
        text-decoration: none;
        display: block;
        font-weight: bold;

    }

    .manaTypeCake-dropdown-content a:hover {
        background-color: #9F0311;
        color: white;
        border-radius: 6px;
    }

    .manaTypeCake-dropdown:hover .manaTypeCake-dropdown-content {
        display: block;
        color: white;
        border-radius: 6px;
    }

    .manaTypeCake-dropdown:hover .manaTypeCake-dropdowndropbtn {
        background-color: #9F0311;
        width: 18px;
        height: 18px;
        color: white;
    }

    .manaTypeCake-firstRowTable {
        position: sticky;
        top: 0;
        background-color: white;
    }

    .change-password-div-wrap {
        display: inline-flex;
        flex-direction: column;
    }

    .change-password-change-info {
        align-self: flex-end;
    }

    .change-password-wrap-content {
        width: 100%;
        height: 100%;
    }

    .change-password-label-input>label {
        font-size: 16px;
        margin: auto 0;
        display: inline-block;
        width: 180px;
        margin-right: 20px;
        font-weight: normal;
    }

    .change-password-label-input {
        padding-bottom: 20px;
    }

    .change-password-label-input>input,
    .change-password-label-input>select {
        height: 40px;
        width: 360px;
        border-radius: 10px;
        border: 1px solid #595260;
        font-weight: 500px;
        opacity: 0.5;
        line-height: 16px;
        padding: 0 10px;
    }

    .change-password-label-input>input,
    .change-password-label-input>select {
        outline-color: #9f0311;
    }

    .change-password-label-input>input:hover,
    .change-password-label-input>select:hover {
        border-color: #9f0311;
    }

    //Button
    .change-password-btn-cancel {
        border-radius: 10px;
        width: fit-content;
        min-width: 92px;
        height: 42px;
        background-color: #e9eaea;
        border: none;
        color: #9f0311;
        margin-right: 5px;
    }

    .change-password-btn-save {
        border-radius: 10px;
        width: fit-content;
        min-width: 92px;
        height: 42px;
        background-color: #9f0311;
        border: none;
        color: #ffffff;
    }

    .change-password-custom-btn-success {
        border-radius: 10px;
        width: fit-content;
        min-width: 92px;
        height: 42px;
        background-color: #28a745;
        border: none;
        color: #ffffff;
    }
</style>
<div>
    <!-- Modal Thêm loại bánh -->
    <div class="modal fade" id="addTypeCakeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCakeModalTitle">Thêm loại bánh</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id='form-add-typecake'>
                        {{! Form add typecake }}
                        <div class='change-password-div-wrap'>
                            <div class='change-password-wrap-content'>
                                <div class='change-password-label-input'>
                                    <label for='' class=''>Tên loại bánh</label>
                                    <input type='text' name='nameTypeCake' class='' placeholder='Nhập tên loại bánh' />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type='button' class='btn btn-outline-danger change-password-btn-cancel'
                        data-dismiss='modal'>Hủy</button>
                    <button type='button' class='btn btn-success change-password-custom-btn-success'
                        id='btn-change-password'>Lưu</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Chỉnh sửa loại bánh -->
    <div class="modal fade" id="editTypeCakeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editCakeModalTitle">Chỉnh sửa bánh</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id='form-edit-typecake'>
                        {{! Form edit typecake }}
                        <div class='change-password-div-wrap'>
                            <div class='change-password-wrap-content'>
                                <div class='change-password-label-input'>
                                    <label for='' class=''>Tên loại bánh</label>
                                    <input type='text' name='nameTypeCake' class='' placeholder='Nhập tên loại bánh' />
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type='button' class='btn btn-outline-danger change-password-btn-cancel'
                        data-dismiss='modal'>Hủy</button>
                    <button type='button' class='btn btn-success change-password-custom-btn-success'
                        id='btn-change-password'>Lưu thay đổi</button>
                </div>
            </div>
        </div>
    </div>

    <div class="manaTypeCake-allDropdowStyle">
        <div class="manaTypeCake-dropcomponentStyle">
            <p class="manaTypeCake-headerTitle">Tên Loại bánh</p>
            <select name="typeCake" id="typeCake" class="manaTypeCake-dropDownStyle">
                <option value="" disabled selected>Select your option</option>
                <option class="manaTypeCake-optionDropDown" value="banhman">Bánh ngọt</option>
                <option class="manaTypeCake-optionDropDown" value="banhman">Bánh mặn</option>
                <option class="manaTypeCake-optionDropDown" value="banhkem">Bánh kem</option>
                <option class="manaTypeCake-optionDropDown" value="banhbonglan">Bánh bông lan</option>
            </select>
        </div>
        <div class="manaTypeCake-dropcomponentStyle" style="margin-Right: 520px;">
            <p class="manaTypeCake-headerTitle">Ngày thêm vào</p>
            <select name="dateAdd" id="dateAdd" class="manaTypeCake-dropDownStyle">
                <option value="" disabled selected>Select your option</option>
                <option class="manaTypeCake-optionDropDown" value="moinhat">Mới nhất</option>
                <option class="manaTypeCake-optionDropDown" value="cunhat">Cũ nhất</option>
            </select>
        </div>

        <div class="manaTypeCake-dropcomponentStyle" style="margin-Right:60px">
             <button type='button' class='change-password-btn-save' style="margin-top: 50%;">Tìm kiếm</button>
        </div>
    </div>
    <div class="manaTypeCake-styleList">
        <table class="table table-hover manaTypeCake-tableStyle">
            <tbody>
                <div>
                    <tr>
                        <th class="manaTypeCake-firstRowTable" scope="col">STT</th>
                        <th class="manaTypeCake-firstRowTable" scope="col">Mã tin</th>
                        <th class="manaTypeCake-firstRowTable" scope="col">Tên bánh</th>
                        <th class="manaTypeCake-firstRowTable" scope="col">Ngày thêm vào</th>
                        <th class="manaTypeCake-firstRowTable" scope="col"></th>
                    </tr>
                </div>
                {{#each data}}
                <tr>
                    <td>1</td>
                    <td style="color: #9F0311;">{{this.id}}</td>
                    <td style="color: #9F0311;">{{this.name}}</td>
                    <td>Ngày thêm vào</td>
                    <td class="manaTypeCake-dropdown">
                        <img class="manaTypeCake-dropbtn" src='/image/3dot.png' alt='' width="18" height="18" />
                        <div class="manaTypeCake-dropdown-content">
                            <a href="#" data-toggle="modal" data-target="#editTypeCakeModal">Chỉnh sửa</a>
                            <a href="#">Xóa</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

       <button type='button' class='change-password-btn-save' 
        style="position: absolute;
        justify-content: flex-end;
        right: 12px;
        bottom: 12px;" data-toggle="modal" data-target="#addTypeCakeModal">Thêm loại bánh</button>
    </div>

</div>