<style>
    .manaTypeCake-headerTitle {
        font-weight: bold;
        font-size: large;
        margin-top: 1.2rem;
        margin-bottom: 7px;
    }

    .manaTypeCake-allDropdowStyle {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        margin-left: 4px;
        justify-content: space-between;
    }

    .manaTypeCake-dropComponentStyle {
        flex-direction: column;
        margin: 0 3.5%;
    }

    .manaTypeCake-dropDownStyle {
        border-radius: 6px;
        border-color: black;
        border-width: 1px;
        box-sizing: content-box;
        padding: 5px 4px;
        font-weight: normal;
        border-radius: 6px;
    }

    .manaTypeCake-dropDownStyle:hover {
        border-color: #9F0311;
    }

    .manaTypeCake-buttonSearch {
        margin-top: 70%;
        width: 85px;
        border-radius: 6px;
        background-color: #9F0311;
        color: white;
        
    }

    .manaTypeCake-buttonSearch:hover {
        box-shadow: 1px 1px 4px 1px grey;
        color: black;
    }

    .manaTypeCake-styleList {
        border-style: solid;
        border-width: 1px 1px;
        width: 92%;
        height: 65%;
        border-radius: 6px;
        margin-top: 24px;
        margin-left: 48px;
        margin-right: 48px;
        position: relative;
    }

    .manaTypeCake-addButton {
        position: absolute;
        justify-content: flex-end;
        right: 12px;
        bottom: 12px;
        border-radius: 6px;
        align-items: flex-end;
        justify-content: flex-end;
        background-color: #9F0311;
        color: white;
    }

    .manaTypeCake-addButton:hover {
        box-shadow: 1px 1px 4px 1px grey;
        color: black;
    }

    .manaTypeCake-rowDataStyle {
        flex-direction: row;
        display: flex;

    }

    .manaTypeCake-rowDataStyle:hover {
        border-width: 2px;
        border-color: red;
        border-style: solid;
    }

    .manaTypeCake-tableStyle {

        width: 92%;
        left: 12px;

    }

    .manaTypeCake-optionDropDown {
        font-weight: 500;
    }

    .manaTypeCake-optionDropDown :hover {
        background-color: #9F0311;
        color: white;
    }

    .manaTypeCake-styleList tbody tr {}

    .manaTypeCake-styleList tbody td {
        width: 25%;
    }

    .manaTypeCake-styleList thead th {
        width: 21%;
    }

    .manaTypeCake-styleList thead {
        display: block;
    }

    .manaTypeCake-styleList tbody {
        display: block;
        height: 26rem;
        overflow-x: hidden;
        overflow-y: scroll;
        font-weight: 500;
    }

    .manaTypeCake-dropbtn {}

    .manaTypeCake-dropdown {
        position: relative;
        display: inline-block;
    }

    .manaTypeCake-dropdown-content {
        display: none;
        position: absolute;
        right: 0;
        background-color: #f9f9f9;
        min-width: 120;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

    .manaTypeCake-dropdown-content a {
        color: #9F0311;
        padding: 3px 12px;
        text-decoration: none;
        display: block;
        font-weight: bold;

    }

    .manaTypeCake-dropdown-content a:hover {
        background-color: #9F0311;
        color: white;
        border-radius: 6px;
    }

    .manaTypeCake-dropdown:hover .manaTypeCake-dropdown-content {
        display: block;
        color: white;
        border-radius: 6px;
    }

    .manaTypeCake-dropdown:hover .manaTypeCake-dropdowndropbtn {
        background-color: #9F0311;
        width: 18px;
        height: 18px;
        color: white;
    }

    .manaTypeCake-firstRowTable {
        position: sticky;
        top: 0;
        background-color: white;
    }
</style>
<div>
    <div class="manaTypeCake-allDropdowStyle">

        <div class="manaTypeCake-dropcomponentStyle" >
            <p class="manaTypeCake-headerTitle">Tên Loại bánh</p>
            <select name="typeCake" id="typeCake" class="manaTypeCake-dropDownStyle">
                <option value="" disabled selected>Select your option</option>
                <option class="manaTypeCake-optionDropDown" value="banhman">Bánh ngọt</option>
                <option class="manaTypeCake-optionDropDown" value="banhman">Bánh mặn</option>
                <option class="manaTypeCake-optionDropDown" value="banhkem">Bánh kem</option>
                <option class="manaTypeCake-optionDropDown" value="banhbonglan">Bánh bông lan</option>
            </select>
        </div>
        <div class="manaTypeCake-dropcomponentStyle" style="margin-Right: 520px;">
            <p class="manaTypeCake-headerTitle">Ngày thêm vào</p>
            <select name="dateAdd" id="dateAdd" class="manaTypeCake-dropDownStyle">
                <option value="" disabled selected>Select your option</option>
                <option class="manaTypeCake-optionDropDown" value="moinhat">Mới nhất</option>
                <option class="manaTypeCake-optionDropDown" value="cunhat">Cũ nhất</option>
            </select>
        </div>

        <div class="manaTypeCake-dropcomponentStyle" style="margin-Right:60px">
            <button class="manaTypeCake-buttonSearch">
                Tìm kiếm
            </button>
        </div>
    </div>
    <div class="manaTypeCake-styleList">
        <table class="table table-hover manaTypeCake-tableStyle">
            <tbody>
                <div>
                    <tr>
                        <th class="manaTypeCake-firstRowTable" scope="col">STT</th>
                        <th class="manaTypeCake-firstRowTable" scope="col">Mã tin</th>
                        <th class="manaTypeCake-firstRowTable" scope="col">Tên bánh</th>
                        <th class="manaTypeCake-firstRowTable" scope="col">Ngày thêm vào</th>
                        <th class="manaTypeCake-firstRowTable" scope="col"></th>
                    </tr>
                </div>
                {{#each data}}
                <tr>
                    <td>1</td>
                    <td style="color: #9F0311;">{{this.id}}</td>
                    <td style="color: #9F0311;">{{this.name}}</td>
                    <td>Ngày thêm vào</td>
                    <td class="manaTypeCake-dropdown">
                        <img class="manaTypeCake-dropbtn" src='/image/3dot.png' alt='' width="18" height="18" />
                        <div class="manaTypeCake-dropdown-content">
                            <a href="#">Chỉnh sửa</a>
                            <a href="#">Xóa</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <button class="manaTypeCake-addButton">
            Thêm bánh
        </button>
    </div>

</div>